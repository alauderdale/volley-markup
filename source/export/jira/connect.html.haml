                    / .input-group-append
                    /   .input-group-text
                    /     \.atlassian.net
                .form-group
                  %label.medium-font
                    Jira Email or username
                  %input.form-control.form-control-lg{:placeholder=>"eg: john@doe.com"}
                .form-group
                  %label.full-width.medium-font
                    .inline-block
                      API token
                    .inline-block.float-right
                      %a{:href=>"https://id.atlassian.com/manage-profile/security/api-tokens", :target=>"_blank"}
                        Get your API token
                        %i.material-icons.helper-icon
                          launch

                  %input.form-control.form-control-lg{:placeholder=>"Enter API token"}

        .margin-bottom
          %a.btn.btn-primary.btn-lg.btn-block{:href=>"/export/jira"}

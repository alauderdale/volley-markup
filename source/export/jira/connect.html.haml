#exportModal.modal.display-block{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header.no-border-bottom.no-padding-bottom
        %a.close{:href=>"/product/review"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        .padded.no-padding-top.text-center.margin-bottom
          %img.margin-bottom{:src=>"/images/jira-software-logo.svg", :width=>"300px"}
          %h1.no-margin-bottom.bold-font
            Connect to Jira
        .margin-bottom
          .row.justify-content-center
            .col-12
              %form
                .form-group
                  %label.medium-font
                    Jira Host

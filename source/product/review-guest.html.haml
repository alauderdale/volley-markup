					%form
						.margin-bottom
							%input.form-control.form-control-lg{:type=>"text", :placeholder=>"Full name"}
						.margin-bottom
							%input.form-control.form-control-lg{:type=>"text", :placeholder=>"Email"}
						.double-margin-top
							%button.btn.btn-primary.btn-lg.btn-block{:type=>"button","data-dismiss"=>"modal"}
								Continue
						%h5.light-text-color.margin-top.text-center
							I agree to the
							%a.light-text-color{:href=>"/welcome/login"}
								%u
									Terms and privacy
					.double-margin-top.text-center
						%button.btn.btn-link{:type=>"button", "data-toggle"=>"modal", "data-target"=>"#guestLoginModal", "data-dismiss"=>"modal"}
							Have an account?

			.modal-footer.no-border-top




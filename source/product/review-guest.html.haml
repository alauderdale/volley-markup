:javascript
	$(document).ready(function(){
		$( ".review" ).addClass( "active" );
		$( ".note-thumbnail:nth-child(2)" ).addClass( "active" );
	});

:css
	body{
		padding-top:0!important;
	}


.review-container
	.notes-list-container
		.notes-list-body
			.notes-list-header.padded.half-padding-bottom
				.inline-block
					%h4.bold-font
						21 Notes
				.inline-block.align-middle.show-notes-toggle.float-right
					%a{:href=>"#"}
						%i.material-icons
							clear
			.note-thumbnail
				.media
					/ %img.margin-right{:src=>"/images/tmp/product-shot.png", :width=>"42px"}
					.comment-number.comment-number-sm.margin-right
						1
					.media-body
						%h5.bold-font.quarter-margin-bottom
							John Doe
						%h5
							=lorem.words(7)
						%h6.light-text-color
							Comment left on 
							%span.bold-font
								Chrome 71 
							on 
							%span.bold-font
								Mac OS 10.14.0
			.note-thumbnail.resolved
				.media
					/ %img.margin-right{:src=>"/images/tmp/product-shot.png", :width=>"42px"}
					.comment-number.comment-number-sm.margin-right
						1
					.media-body
						%h5.bold-font.quarter-margin-bottom
							=lorem.first_name
							,
							=lorem.first_name
						%h5
							=lorem.words(8)
						%h6.light-text-color
							Comment left on 
							%span.bold-font
								Chrome 71 
							on 
							%span.bold-font
								Mac OS 10.14.0


			.notes-list-footer
				.show-resolved.check-btn
					%button.no-margin-bottom.btn-link.btn{:type=>"button"}
						%i.material-icons
							check_box
						Show resolved

	.note-container
		.note-body
			.note-nav.border-bottom
				.container-fluid
					.row
						.col-8
							.inline-block.align-middle.show-notes-toggle.menu-button
								%a.btn.btn-secondary{:href=>"#"}
									%i.material-icons
										menu
							.inline-block
								=partial"mark-resolved-btn"
						.col-4
							.float-right{:style=>"position:relative; top:2px;"}
								%a.btn.btn-secondary{:href=>"#"}
									Go to page
			.note-info
				.img-container
					.img-wrapper
						.img-comment-container
							.comment-number{:style=>"position: absolute; right: 40px; top: 22px;"}
								1
							%img{:src=>"/images/tmp/screenshot.png", :width=>"800px"}
							.half-margin-top.text-center.show-comment-toggle.d-lg-none.d-md-none
								%a.btn.btn-link.btn-sm.light-text-color{:href=>"#"}
									Show comments
				.comments-container
					.comments-wrapper
						.padded.text-right.no-padding-bottom.show-comment-toggle.d-sm-block.d-md-none
							%a{:href=>"#"}
								%i.material-icons
									close
						.new-comment
							%textarea.form-control.full-width.quarter-margin-bottom.new-comment-field{:rows=>"1", :placeholder=>"Write a reply"}
							%button.btn.btn-primary.btn-sm.float-right.add-comment-btn{:type=>"button"}
								Comment
							%button.btn.btn-link.attachment.float-right{:type=>"button", "data-toggle"=>"tooltip", :title=>"Attach a file"}
								%i.material-icons
									attachment
							
						.comments-list-container
							.comment
								.media
									.avatar.avatar-initial.avatar-xs.half-margin-right
										JD
									.media-body
										%h4.bold-font.quarter-margin-bottom
											John Doe
										%h4
											=lorem.words(10)
										%a{:href=>"#"}
											%img{:src=>"/images/tmp/shot.png", :width=>"85px"}
										%h5.light-text-color
											2m ago
							.comment
								.media
									.avatar.avatar-initial.avatar-xs.half-margin-right
										AL
									.media-body
										.actions
											.dropdown.show.text-right
												%button.btn.btn-link.btn-action{"data-toggle" => "dropdown", :type=>"button"}
													%i.material-icons
														more_horiz
												.dropdown-menu.dropdown-menu-right
													%button.dropdown-item{:type=>"button"} 
														Edit
													%button.dropdown-item{:type=>"button", :onclick=>"location.href='products/zero';"} 
														Delete
										%h4.bold-font.quarter-margin-bottom
											Alex Lauderdale
										%h4
											=lorem.words(10)
										%h5.light-text-color
											2m ago



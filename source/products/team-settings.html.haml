;;;

"title": "Team settings"

;;;



/ = partial "free-trial-card"



%section
	.container
		.row.justify-content-center
			.col-xl-10
				= partial("shared/page_header", :locals => { :title => "Team settings" })
		.row.justify-content-center
			.col-xl-10
				.card.margin-top
					.card-body
						%form
							.margin-bottom
								%h4.bold-font
									Team Name
								%input.form-control.form-control-lg{:type=>"text", :value=>"Eternal Contrast"}
						.padding-top.padding-bottom
							%hr
						%h4.bold-font
							Team icon
						%h5.light-text-color.margin-bottom
							Upload an image that is 132px square or larger for best results
						.media
							.avatar.avatar-xl.margin-right.avatar-rounded
								EC
							.media-body
								%a.btn.btn-secondary{:href=>"#", :style=>"margin-top:24px;"}
									Change icon
						.padding-top.padding-bottom
							%hr
						%button.btn.btn-primary.btn-lg{:type=>"submit"}
							Save changes
				.double-margin-top
					%button.btn.btn-secondary{:type=>"button", "data-toggle"=>"modal", "data-target"=>"#deleteModal"} 
						Delete team



							
#deleteModal.modal{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
	.modal-dialog{:role => "document"}
		.modal-content
			.modal-header
				%h2.padding-left
					Delete team?
				%button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
					%span{"aria-hidden" => "true"} Ã—

			.modal-body
				.padded.no-padding-top.no-padding-bottom
					%p
						This will instantly delete this team, including all comments, notes and projects. This cannot be undone.
					%form
						.margin-bottom
							%input.form-control.form-control-lg{:type=>"text", :placeholder=>"Type 'delete' to confirm"}

			.modal-footer.no-border-top
				%button.btn.btn-link.light-text-color{:tyle=>"button", "data-dismiss" => "modal"}
					Cancel
				%button.btn.btn-danger{:tyle=>"button", "data-dismiss" => "modal"}
					Yes, delete this team

					

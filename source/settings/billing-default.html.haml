									View billing history for your Volley account.
						.invoice-list.margin-top
							-4.times do
								.row.align-items-center
									.col-sm-3
										%h4.no-margin
											November 27, 2018
									.col
										%h4.light-text-color.no-margin
											$20.00
									.col
										%h4.no-margin
											Pro subscription
									.col
										%h4.text-right.no-margin
											%a{:href=>"#"}
												View PDF
						.row
							.col
								%h4.margin-top
									%a{:href=>"#"}
										Show full invoice history

			.col-xl-1


#changeCardModal.modal{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
	.modal-dialog{:role => "document"}
		.modal-content
			.modal-header
				%h2.padding-left
					Update billing information
				%button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
					%span{"aria-hidden" => "true"} Ã—

			.modal-body
				.padded.no-padding-top.no-padding-bottom
					%form
						.form-row.margin-bottom
							.form-group.col-12
								%label
									Name on card
								%input.form-control.form-control-lg{:type=>"text"}
						.form-row.margin-bottom
							.form-group.col-6
								%label
									Card number
								%input.form-control.form-control-lg{:type=>"text", :placeholder=>"0000 0000 0000 0000"}
							.form-group.col-3
								%label
									Expire date
								%input.form-control.form-control-lg{:type=>"text", :placeholder=>"10/20"}
							.form-group.col-3
								%label
									CVV
								%input.form-control.form-control-lg{:type=>"text", :placeholder=>"123"}
						.form-row.margin-bottom
							.form-group.col-12
								%img{:src=>"../images/cards.png",:width=>"220px"}

			.modal-footer.no-border-top
				%button.btn.btn-link{:tyle=>"button", "data-dismiss" => "modal"}
					Cancel
				%button.btn.btn-primary{:tyle=>"button", "data-dismiss" => "modal"}
					Save changes

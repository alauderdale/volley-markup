								.float-right
									%a.btn.btn-primary.margin-bottom{:href=>"/billing/trial-expired"}
										Change plan

				.card.margin-bottom
					.card-body
						.row.align-items-center
							.col
								%p.medium-font.no-margin-bottom
									Payment method
